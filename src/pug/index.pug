extends _layout.pug

block css
  //- link(href='https://cdn.jsdelivr.net/npm/@braid/vue-formulate@2.4.3/dist/snow.min.css' rel='stylesheet')
  link(href='https://cdnjs.cloudflare.com/ajax/libs/animate.css/4.1.1/animate.min.css' rel='stylesheet')
  link(href='https://fonts.googleapis.com/icon?family=Material+Icons' rel='stylesheet')
  link(href='css/index.css' rel='stylesheet')

block modal
  ud-modal(v-model="isModalShow" mask-cancel has-cancel :message="modalMessage" @cancel="isModalShow = 0")

block content
  va-form(:rules="rules" :model="user" ref="form")
    va-form-item(label="姓名" prop="name")
      va-input(placeholder="請輸入您的姓名" v-model="user.name")
    va-form-item(label="電話" prop="phone")
      va-input(placeholder="請輸入您的電話" v-model="user.phone" maxlength="10")
  ud-button(@click="formSubmit") 送出表單
