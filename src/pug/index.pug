extends _layout.pug

block css
  //- link(href='https://cdn.jsdelivr.net/npm/@braid/vue-formulate@2.4.3/dist/snow.min.css' rel='stylesheet')
  link(href='css/index.css' rel='stylesheet')

block modal
  ud-alert(v-model="isAlertShow" mask-cancel :message="alertMessage")
  ud-confirm(:is-show="isConfirmShow" mask-cancel :message="confirmMessage" @cancel="isConfirmShow = 0" @confirm="$formulate.submit('my-form')")
  ud-modal(:is-show="isModalShow" mask-cancel has-cancel :message="modalMessage" @cancel="isModalShow = 0")
    img(src="https://imgur.com/DIC7dRT.jpg", alt="")

block content
  h1 {{test || "Select"}}
  h1 {{testVal || "Checkbox"}}
  ud-radio(v-model="agree" :options="testArr")
  ud-checkbox(v-model="testVal" :options="testArr")
  ud-select(v-model="test" :options="testOptions")
  ud-button(@click="showAlert('alert開了')") alert
  ud-button(@click="showConfirm('confirm開了')") confirm
  ud-button(@click="showModal('modal開了')") modal
  h1 {{ form }}
  //- h1 {{ generate }}
  formulate-form(v-model="form" @submit="alert" name="my-form")
    ud-vf-item(label="姓名")
      ud-name
    ud-vf-item(label="性別")
      ud-gender
    ud-vf-item(label="手機")
      ud-phone
    ud-vf-item(label="E-mail")
      ud-mail
    ud-vf-item(label="身分證字號")
      ud-idcard
    ud-vf-item(label="開始日期")
      ud-date(name="startAt")
    ud-vf-item(label="地址")
      ud-address-group
    ud-accept
      p 我同意酷必資訊#[a(href="https://goo.gl/") 使用者條款]!
